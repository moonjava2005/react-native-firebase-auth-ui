{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "target": "es5",
    "baseUrl": "src"
  },
  "include": [
    "src",
    "ios",
    "android"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "**/__tests__/*"
  ],
  "types": [
    "jest"
  ]
}
